{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "framework": "other",
  "env": {
    "NODE_ENV": "production"
  },
  "public": true,
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/(?!api)",
      "dest": "dist/public/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "dist/public/$1"
    }
  ]
}
